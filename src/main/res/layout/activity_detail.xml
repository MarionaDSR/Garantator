<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/generalPadding"
    tools:context="es.dsrroma.garantator.AddWarrantyActivity">

    <TextView
        android:id="@+id/tvWarrantyName"
        style="@style/formTitle" />

    <LinearLayout style="@style/formHorizontalLine">
        <TextView
            android:text="@string/product_name_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvProductName"
            style="@style/formValue2" />

        <TextView
            android:text="@string/category_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvCategory"
            style="@style/formValue2" />
    </LinearLayout>

    <LinearLayout style="@style/formHorizontalLine">
        <TextView
            android:text="@string/brand_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvBrand"
            style="@style/formValue2"/>

        <TextView
            android:text="@string/model_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvModel"
            style="@style/formValue2" />
    </LinearLayout>

    <LinearLayout style="@style/formHorizontalLine">
        <TextView
            android:text="@string/serial_number_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvSerialNumber"
            style="@style/formValue1" />
    </LinearLayout>

    <LinearLayout style="@style/formHorizontalLine">
        <TextView
            android:text="@string/warranty_lasts_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvWarrantyLength"
            style="@style/formValue2" />

        <TextView
            android:text="@string/warranty_from_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvStartDate"
            style="@style/formValue2" />

        <TextView
            android:text="@string/warranty_to_label"
            style="@style/formLabel" />
        <TextView
            android:id="@+id/tvEndDate"
            style="@style/formValue2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/gvPictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="@dimen/picture_column_width"
            android:gravity="center"
            android:horizontalSpacing="@dimen/picture_spacing"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/picture_spacing" />
    </LinearLayout>
</LinearLayout>
